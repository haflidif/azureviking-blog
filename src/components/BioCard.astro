---
import { SITE } from '@/config';
import { basePath } from '@/lib/utils/basePath';
import { Image } from 'astro:assets';
import profilePhoto from '@/site-assets/profile_photo_pro.png';
import mvpBadge from '@/site-assets/mvp_alumni_badge.png';
---

<div
  class="flex flex-col items-center gap-3 p-4 sm:p-5 rounded-2xl bg-secondary/30 border border-border/50 backdrop-blur-sm"
>
  <!-- Profile Photo with gradient ring -->
  <div class="relative">
    <div
      class="w-20 h-20 sm:w-24 sm:h-24 rounded-full p-[2px] bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500"
    >
      <div class="w-full h-full rounded-full overflow-hidden bg-background">
        <Image
          src={profilePhoto}
          alt={SITE.author}
          width={200}
          height={200}
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>

  <!-- Name -->
  <h2 class="text-base sm:text-lg font-black text-foreground text-center leading-tight">
    Haflidi Fridthjofsson
  </h2>

  <!-- Bio -->
  <p class="text-xs text-muted-foreground text-center leading-relaxed max-w-[260px]">
    Icelandic Technical Fellow & Senior Cloud Solution Architect at Microsoft. Former Microsoft MVP
    in Azure & Security.
    <a
      href={basePath('/about')}
      class="text-foreground font-semibold hover:text-primary transition-colors underline underline-offset-2"
    >
      Read More
    </a>
  </p>

  <!-- Social Icons -->
  <div class="flex items-center gap-3">
    {
      SITE.social.linkedin && (
        <a
          href={SITE.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="text-muted-foreground hover:text-[#0A66C2] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
        </a>
      )
    }
    {
      SITE.social.github && (
        <a
          href={SITE.social.github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="text-muted-foreground hover:text-foreground transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
          </svg>
        </a>
      )
    }
    {
      SITE.social.youtube && (
        <a
          href={SITE.social.youtube}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="YouTube"
          class="text-muted-foreground hover:text-[#FF0000] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
          </svg>
        </a>
      )
    }
    {
      SITE.social.instagram && (
        <a
          href={SITE.social.instagram}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="text-muted-foreground hover:text-[#E4405F] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z" />
          </svg>
        </a>
      )
    }
    {
      SITE.social.meetup && (
        <a
          href={SITE.social.meetup}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Meetup"
          class="text-muted-foreground hover:text-[#ED1C40] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 12.21c-.17-.59-.75-1.07-1.09-1.26a1.61 1.61 0 0 0-.67-.18c-.12 0-.37 0-.57.16-.26.21-.38.57-.38.57s-.67 2.01-.72 2.15c-.15.42-.41.63-.73.63a.74.74 0 0 1-.74-.71c0-.1.02-.21.06-.34l1.47-5.07c.11-.37.17-.67.17-.91a1.2 1.2 0 0 0-1.2-1.2c-.66 0-1.08.45-1.24.99l-1.5 5.22s-.28.92-.95.92c-.48 0-.66-.42-.66-.71 0-.13.02-.25.06-.38l.96-3.35c.08-.27.11-.49.11-.67 0-.58-.38-1.07-1.07-1.07-.57 0-.99.39-1.14.91l-.99 3.53s-.26.88-.93.88c-.42 0-.65-.36-.65-.68 0-.12.02-.24.06-.37l1.44-4.97c.08-.27.12-.5.12-.7 0-.68-.5-1.17-1.17-1.17-.63 0-1.08.42-1.22.95L3.34 15.5a4.35 4.35 0 0 0-.16 1.14c0 2.08 1.56 3.62 3.64 3.62 1.63 0 2.8-.84 3.38-2.34.46 1.39 1.59 2.34 3.18 2.34 2.49 0 3.86-1.83 4.4-3.63l1.07-3.78c.05-.18.08-.34.08-.47a.73.73 0 0 0-.22-.17zM6.25 5.28a2.3 2.3 0 0 0 2.26-2.34A2.3 2.3 0 0 0 6.25.6 2.3 2.3 0 0 0 4 2.94a2.3 2.3 0 0 0 2.25 2.34z" />
          </svg>
        </a>
      )
    }
    {
      SITE.social.sessionize && (
        <a
          href={SITE.social.sessionize}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Sessionize"
          class="text-muted-foreground hover:text-[#1AB394] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zm-1.5 16.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm1.5-4.5c-1.657 0-3-1.343-3-3V7.5a3 3 0 1 1 6 0V9c0 1.657-1.343 3-3 3z" />
          </svg>
        </a>
      )
    }
  </div>

  <!-- MVP Alumni Badge -->
  <div class="mt-1">
    <Image
      src={mvpBadge}
      alt="Microsoft MVP Alumni"
      width={120}
      height={120}
      class="w-20 h-20 sm:w-24 sm:h-24 object-contain"
    />
  </div>
</div>
